<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/but_set_movie_sort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Sortowanie filmów"
        app:layout_constraintEnd_toStartOf="@+id/but_set_audio_sort"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/but_set_audio_sort"
        android:layout_width="wrap_content"
        android:layout_height="49dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="Sortowanie nagrań"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/but_set_movie_sort"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/but_set_reset_cat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Resetuj kategorie"
        app:layout_constraintEnd_toEndOf="@+id/but_set_movie_sort"
        app:layout_constraintStart_toStartOf="@+id/but_set_movie_sort"
        app:layout_constraintTop_toBottomOf="@+id/but_set_movie_sort"/>

</android.support.constraint.ConstraintLayout>